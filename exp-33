#include <stdio.h>

int findLRU(int time[], int f) {
    int i, min = time[0], pos = 0;
    for (i = 1; i < f; i++) {
        if (time[i] < min) { min = time[i]; pos = i; }
    }
    return pos;
}

int main() {
    int frames[10], pages[30], counter = 0, time[10];
    int i, j, k, f, n, pos, faults = 0, flag1, flag2;

    printf("Enter number of frames: ");
    scanf("%d", &f);
    printf("Enter number of pages: ");
    scanf("%d", &n);
    printf("Enter the reference string: ");
    for (i = 0; i < n; i++) scanf("%d", &pages[i]);

    for (i = 0; i < f; i++) frames[i] = -1;

    for (i = 0; i < n; i++) {
        flag1 = flag2 = 0;
        for (j = 0; j < f; j++) {
            if (frames[j] == pages[i]) {
                counter++;
                time[j] = counter;
                flag1 = flag2 = 1;
                break;
            }
        }
        if (flag1 == 0) {
            for (j = 0; j < f; j++) {
                if (frames[j] == -1) {
                    faults++;
                    frames[j] = pages[i];
                    counter++;
                    time[j] = counter;
                    flag2 = 1;
                    break;
                }
            }
        }
        if (flag2 == 0) {
            pos = findLRU(time, f);
            frames[pos] = pages[i];
            counter++;
            time[pos] = counter;
            faults++;
        }
        printf("Frames: ");
        for (k = 0; k < f; k++) printf("%d ", frames[k]);
        printf("\n");
    }
    printf("Total Page Faults = %d\n", faults);
    return 0;
}
