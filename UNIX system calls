#include <stdio.h>
#include <fcntl.h>    // for open()
#include <unistd.h>   // for read(), write(), close(), lseek()
#include <string.h>

int main() {
    int fd;
    char write_buf[] = "Hello, this is a demo of UNIX system calls!\n";
    char read_buf[100];

    // 1. Create/Open a file
    fd = open("demo.txt", O_CREAT | O_RDWR, 0644); 
    if (fd < 0) {
        perror("open");
        return 1;
    }
    printf("File opened successfully with descriptor %d\n", fd);

    // 2. Write into the file
    if (write(fd, write_buf, strlen(write_buf)) < 0) {
        perror("write");
        return 1;
    }
    printf("Data written successfully!\n");

    // 3. Move file pointer to beginning
    lseek(fd, 0, SEEK_SET);

    // 4. Read from the file
    int bytes = read(fd, read_buf, sizeof(read_buf) - 1);
    if (bytes < 0) {
        perror("read");
        return 1;
    }
    read_buf[bytes] = '\0'; // Null terminate
    printf("Data read from file: %s\n", read_buf);

    // 5. Close the file
    if (close(fd) < 0) {
        perror("close");
        return 1;
    }
    printf("File closed successfully!\n");

    return 0;
}
