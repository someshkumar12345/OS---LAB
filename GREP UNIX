#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define MAX_LINE 1024

int main(int argc, char *argv[]) {
    FILE *fp;
    char line[MAX_LINE];
    char *pattern;

    if (argc != 3) {
        fprintf(stderr, "Usage: %s <pattern> <filename>\n", argv[0]);
        exit(1);
    }

    pattern = argv[1];

    // Open the file
    fp = fopen(argv[2], "r");
    if (fp == NULL) {
        perror("fopen");
        exit(1);
    }

    // Read each line and check for pattern
    while (fgets(line, sizeof(line), fp)) {
        if (strstr(line, pattern)) {
            printf("%s", line);  // Print the line if pattern is found
        }
    }

    fclose(fp);
    return 0;
}
